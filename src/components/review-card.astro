---
interface Props {
  pathImg: string;
  altImg: string;
}

const { pathImg, altImg } = Astro.props;
---

<div class="flex flex-col gap-3 w-[280px]">
  <div class="flex gap-4 items-center">
    <img src={pathImg} alt={altImg} class="w-[90px]" />
    <div class="flex gap-1 items-center">
      <slot name="star-1">
        <i class="bx bxs-star text-[#D4D4D8] text-lg"></i>
      </slot>
      <slot name="star-2">
        <i class="bx bxs-star text-[#D4D4D8] text-lg"></i>
      </slot>
      <slot name="star-3">
        <i class="bx bxs-star text-[#D4D4D8] text-lg"></i>
      </slot>
      <slot name="star-4">
        <i class="bx bxs-star text-[#D4D4D8] text-lg"></i>
      </slot>
      <slot name="star-5">
        <i class="bx bxs-star text-[#D4D4D8] text-lg"></i>
      </slot>
    </div>
  </div>
  <div class="flex flex-col gap-1">
    <slot name="reviewer" />
    <slot name="reviewer-message" />
  </div>
</div>
